class pat5
{
    
    public static void main(String arg[])
    {
        int n=7;
        for(int i=1;i<=n;i++)
        {
            for(int j=1;j<=n;j++)
            {
                if(i==j||j==1||i==1||i==n||j==n||j-1==n-i)
                   System.out.print("* "); 
                else
                    System.out.print("  ");
            }
            System.out.println();
        }
    }
}
